        }

        #footer {
            background-color: #C7EFCF;
            text-align: center;
            padding-bottom: 1%;
            font-size: 20px;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
        }

        #con {
            border: double;
            border-color: burlywood;
        }

        .menu-button {
            background-color: transparent;
            border: none;
            color: #F1FAEE;
            font-size: 20px;
            cursor: pointer;
        }

        .dropdown-menu {
            display:none;
            background-color:#FF1654;
            position: absolute;
            min-width: 158px;
            z-index: 1;
        }
            .dropdown-menu a{
                color:black;
                padding:12px 10px;
                text-decoration:none;
                display:block;
            }

            .dropdown-menu a:hover {
                background-color: white;
            }

        .right-menu {
            position: relative;
            display: inline-block;
        }

            .right-menu:hover .dropdown-menu {
                display: block;
            }

            .right-menu:hover .menu-button {
                background-color: #3e8e41
            }
    </style>
